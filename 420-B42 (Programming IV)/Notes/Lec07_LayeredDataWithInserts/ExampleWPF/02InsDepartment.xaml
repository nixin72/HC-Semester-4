<Window x:Class="ExampleWPF._02InsDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleWPF"
        mc:Ignorable="d"
        Title="Insert Department" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="txtDeptName" HorizontalAlignment="Left" Height="23" Margin="127,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
        <Label x:Name="lblDeptName" Content="Department:" HorizontalAlignment="Left" Margin="39,81,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLoc" HorizontalAlignment="Left" Height="23" Margin="127,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
        <Label x:Name="lblLoc" Content="Location:" HorizontalAlignment="Left" Margin="57,127,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnInsert" Content="Insert" HorizontalAlignment="Left" Margin="127,186,0,0" VerticalAlignment="Top" Width="75" Click="btnInsert_Click"/>
        <ComboBox x:Name="cbxDepartments" HorizontalAlignment="Left" Margin="127,35,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding}"/>

    </Grid>
</Window>
